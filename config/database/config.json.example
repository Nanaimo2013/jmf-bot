{
  "type": "sqlite",
  "connections": {
    "sqlite": {
      "driver": "sqlite3",
      "filename": "./data/database.sqlite",
      "useNullAsDefault": true,
      "foreign_key_constraints": true
    },
    "mysql": {
      "driver": "mysql2",
      "host": "localhost",
      "port": 3306,
      "database": "jmf_bot",
      "user": "jmf_bot",
      "password": "YOUR_PASSWORD_HERE",
      "charset": "utf8mb4",
      "timezone": "+00:00",
      "connectionLimit": 10
    },
    "postgresql": {
      "driver": "pg",
      "host": "localhost",
      "port": 5432,
      "database": "jmf_bot",
      "user": "jmf_bot",
      "password": "YOUR_PASSWORD_HERE",
      "ssl": {
        "rejectUnauthorized": false
      },
      "connectionLimit": 10
    }
  },
  "pool": {
    "min": 2,
    "max": 10,
    "idleTimeoutMillis": 30000
  },
  "migrations": {
    "directory": "./src/database/migrations",
    "tableName": "migrations",
    "extension": "js"
  },
  "seeds": {
    "directory": "./src/database/seeds",
    "extension": "js"
  },
  "backup": {
    "enabled": true,
    "directory": "./backups/database",
    "interval": 86400000,
    "maxBackups": 7,
    "compression": true
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "directory": "./logs/database",
    "maxFiles": 10,
    "maxSize": "10m"
  }
} 