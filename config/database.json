{
    "default": "sqlite",
    "connections": {
        "sqlite": {
            "driver": "sqlite",
            "database": "./data/database.sqlite",
            "useNullAsDefault": true,
            "foreign_key_constraints": true
        },
        "mysql": {
            "driver": "mysql",
            "host": "localhost",
            "port": 3306,
            "database": "jmf_bot",
            "username": "jmf_bot",
            "password": "",
            "charset": "utf8mb4",
            "collation": "utf8mb4_unicode_ci",
            "prefix": "",
            "strict": true,
            "engine": "InnoDB",
            "pool": {
                "min": 2,
                "max": 10
            }
        },
        "postgres": {
            "driver": "pg",
            "host": "localhost",
            "port": 5432,
            "database": "jmf_bot",
            "username": "jmf_bot",
            "password": "",
            "charset": "utf8",
            "prefix": "",
            "schema": "public",
            "pool": {
                "min": 2,
                "max": 10
            }
        }
    },
    "migrations": {
        "directory": "./src/database/migrations",
        "tableName": "migrations",
        "extension": "js"
    },
    "seeds": {
        "directory": "./src/database/seeds",
        "extension": "js"
    },
    "backup": {
        "enabled": true,
        "directory": "./backups/database",
        "interval": "1d",
        "maxBackups": 10,
        "compression": true
    },
    "logging": {
        "enabled": true,
        "directory": "./logs/database",
        "level": "info",
        "maxFiles": 30,
        "maxSize": "10M"
    },
    "debug": false
} 