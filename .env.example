# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
CLIENT_ID=your_bot_client_id_here
GUILD_ID=your_guild_id_here
BOT_PREFIX=!

# Environment
NODE_ENV=development # development, production, test

# Database Configuration
# Main database type (sqlite, mysql, postgres)
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_NAME=jmf_bot
DB_USER=jmf_bot
DB_PASSWORD=your_database_password_here

# SQLite Configuration (default)
SQLITE_DATABASE=./data/database.sqlite
SQLITE_FOREIGN_KEYS=true

# MySQL Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=jmf_bot
MYSQL_USERNAME=jmf_bot
MYSQL_PASSWORD=your_secure_password_here
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=jmf_bot
POSTGRES_USERNAME=jmf_bot
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration (for caching and rate limiting)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info # error, warn, info, debug
LOG_FORMAT=simple # simple, detailed, json
LOG_COLORS=true
LOG_TIMESTAMP=true
LOG_DIRECTORY=logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30
LOG_CONSOLE_ENABLED=true
LOG_FILE_ENABLED=true

# API Configuration
API_ENABLED=false
API_PORT=3000
API_HOST=localhost
API_PREFIX=/api
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=15m
API_SECRET=your_api_secret_key_here

# Game Server Integration
PTERODACTYL_ENABLED=false
PTERODACTYL_API_KEY=your_pterodactyl_api_key_here
PTERODACTYL_URL=https://panel.example.com

# Bot Owner and Admin Configuration
OWNER_ID=your_discord_id_here
ADMIN_IDS=comma,separated,discord,ids

# Email Configuration (for notifications)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.your_email_provider.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_FROM=your_email@example.com

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_INTERVAL=60000
MONITORING_WEBHOOK_URL=your_webhook_url_here

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=1d
BACKUP_MAX_AGE=30d
BACKUP_DIRECTORY=./backups

# Feature Flags
FEATURE_TICKETS=true
FEATURE_MODERATION=true
FEATURE_GAME_SERVERS=true
FEATURE_ANALYTICS=true
FEATURE_AUTOMOD=true