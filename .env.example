# Discord Bot Token (Required)
DISCORD_TOKEN=your_discord_bot_token_here

# Database Configuration (SQL)
# SQLite Configuration (default, file-based)
DB_TYPE=sqlite
DB_PATH=./data/database.sqlite

# MySQL Configuration (uncomment and configure these if needed)
# DB_TYPE=mysql
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=jmf_bot
# DB_USERNAME=jmf_bot
# DB_PASSWORD=your_secure_password_here

# PostgreSQL Configuration (uncomment and configure these if needed)
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_DATABASE=jmf_bot
# DB_USERNAME=jmf_bot
# DB_PASSWORD=your_secure_password_here

# Environment (development or production)
NODE_ENV=production

# API Keys for Game Server Integration
PTERODACTYL_API_KEY=your_pterodactyl_api_key_here
PTERODACTYL_API_URL=your_pterodactyl_api_url_here

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info

# Bot Owner ID
OWNER_ID=your_discord_id_here

# Guild ID (for development and testing)
GUILD_ID=your_guild_id_here

# Bot Client ID (for slash commands)
CLIENT_ID=your_bot_client_id_here

# Redis Configuration (for caching and sessions)
# Uncomment and configure if using Redis
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here

# Email Configuration (for notifications)
# Uncomment and configure if using email notifications
# EMAIL_HOST=smtp.your_email_provider.com
# EMAIL_PORT=587
# EMAIL_USER=your_email@example.com
# EMAIL_PASSWORD=your_email_password_here
# EMAIL_FROM=your_email@example.com

# Additional Configuration
# Uncomment and configure as needed
# MAX_CONNECTIONS=100
# TIMEZONE=UTC